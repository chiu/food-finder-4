<h1>Restaurants#index</h1>
<p>Find me in app/views/diners/index.html.erb</p>




<div><%= link_to "Add new retaurant!", new_diner_path %></div>

<% if current_user %>
<div><%= link_to "create deal", new_diner_deal_path(current_user) %></div> 
<% end %>


<div>Your diner info:</div>
<% @diners.each do |diner| %>

    <% if current_user == nil || current_user.id == diner.id %>
    <div>email: <%= diner.email %></div>
    <div>name: <%= diner.name %></div>
    <div>location: <%= diner.location %></div>
    <div>description: <%= diner.description %></div>
    <div>rating: <%= diner.rating %></div>
    <p><%= diner.description %></p>
    </br>
    <div>Deals offered: </div>
    <% diner.deals.each do |deal| %>
    <div><%= deal.name %></div>
    </br>
    <% end %>
<% end %>





<% end %>  