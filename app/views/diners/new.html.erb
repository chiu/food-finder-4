<p>Find me in app/views/diners/new.html.erb</p>


<h1>Sign Up</h1>
    <%= form_for @diner do |f| %>
      <% if @diner.errors.any? %>
        <div>
          <%= pluralize(@diner.errors.count, "error") %> prevented the account from being created:
          <ul>
            <% @diner.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div>
        <%= f.label :email %><br>
        <%= f.text_field :email %>
      </div>
      <div>
        <%= f.label :name, "Name" %><br>
        <%= f.text_field :name %>
      </div>
      <div>
        <%= f.label :password %><br>
        <%= f.password_field :password %>
      </div>
      <div>
        <%= f.label :password_confirmation %><br>
        <%= f.password_field :password_confirmation %>
      </div>
      <div><%= f.submit "Submit" %></div>
    <% end %>