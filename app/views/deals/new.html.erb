<h1>Deals#new</h1>
<p>Find me in app/views/deals/new.html.erb</p>

<!-- <%= link_to "Back to diner", diner_path(@diner) %><br/> -->

<h2>Write a deal for <em><%= @diner.name %></em>.</h2>

<%= form_for([@diner, @deal]) do |f| %>
<% if @deal.errors.any? %>
<div>
  <%= pluralize(@deal.errors.count, "error") %> prevented the deal from being saved:
  <ul>
    <% @deal.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
</ul>
</div>
<% end %>

<div>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
</div>
<div>
    <%= f.label :old_price %><br>
    <%= f.number_field :old_price %>
</div>
<div>
    <%= f.label :new_price %><br>
    <%= f.number_field :new_price %>
</div>

<div>
<%= f.label :offer_start %><br>
<%= f.date_field :offer_start %>
</div>

<div>
<%= f.label :offer_end %><br>
<%= f.date_field :offer_end %>
</div>

<div>
<%= f.label :pickup_start %><br>
<%= f.date_field :pickup_start %>
</div>

<div>
<%= f.label :pickup_end %><br>
<%= f.date_field :pickup_end %>
</div>

<div>
    <%= f.label :description %><br>
    <%= f.text_area "description" %>
</div>

<div><%= f.submit "Submit" %></div>
<% end %>